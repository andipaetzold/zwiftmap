{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        "dist/**",
        "dist-web/**",
        "dist-worker/**",
        "lib/**",
        "extension-*.zip",
        "source-*.zip"
      ]
    },
    "deploy": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "outputs": []
    },
    "start": {
      "cache": false,
      "outputs": []
    },
    "test": {
      "outputs": []
    }
  }
}
