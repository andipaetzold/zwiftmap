{
  "extends": ["config:js-app", ":semanticCommitsDisabled", ":automergeMinor"],
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^@react-md/"],
      "groupName": "react-md monorepo"
    }
  ],
  "ignoreDeps": ["react-leaflet", "@react-leaflet/core", "node-fetch"]
}
