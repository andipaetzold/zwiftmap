{
  "name": "zwiftmap",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "browser-extension",
    "frontend",
    "packages/**"
  ],
  "engines": {
    "node": "16.16.0"
  },
  "scripts": {
    "start": "turbo run start",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "heroku-postbuild": "turbo run build --filter=@zwiftmap/backend",
    "deploy": "turbo run deploy",
    "test": "CI=true turbo run test"
  },
  "dependencies": {
    "turbo": "1.4.2"
  }
}
